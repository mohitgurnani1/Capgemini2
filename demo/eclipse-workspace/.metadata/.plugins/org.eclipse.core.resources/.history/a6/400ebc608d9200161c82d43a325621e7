		conn=DriverManager.getConnection(url);
		*/}
		catch(Exception e){
			e.printStackTrace();
		}
 }

synchronized public static  EmployeeDaoImplForDBUsingJDBCTemplate getDaoReference(){
	 if(dao==null)
		 return new EmployeeDaoImplForDBUsingJDBCTemplate();
	 else
		 return dao;
 }
 
 
 
